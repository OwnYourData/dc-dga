<section class="hero-new-markets">
  <div class="container hero-content text-center">
    <div class="text-uppercase hero-kicker mb-3">
      <%= t("landing.hero.kicker") %>
    </div>

    <h2 class="hero-title mb-3" style="font-weight: 300; font-size: 3.4rem;">
      <%= t("landing.hero.title") %>
    </h2>

    <div class="text-uppercase hero-subtitle">
      <%= t("landing.hero.subtitle") %>
    </div>
  </div>
</section>

<section id="services" class="py-5">
  <div class="container">

    <div class="services-header text-center mb-5 mb-lg-6">
      <h2 class="fw-bold display-5 mb-3"><%= t("services.title") %></h2>
      <p class="lead text-muted mx-auto services-intro">
        <%= t("services.intro") %>
      </p>
    </div>

    <% icons = ["bi-arrow-left-right", "bi-shield-check", "bi-graph-up-arrow"] %>
    <% t("services.items").each_with_index do |item, idx| %>
      <div class="card border-0 shadow-sm rounded-4 mb-4 mb-lg-5">
        <div class="card-body p-0">
          <div class="row g-0 services-row">

            <!-- Links: Beschreibung -->
            <div class="col-12 col-lg-7">
              <div class="p-4 p-lg-5">
                <div class="d-flex align-items-start gap-3 mb-3">
                  <div class="services-icon rounded-3 bg-light border flex-shrink-0 d-flex align-items-center justify-content-center">
                    <i class="bi <%= icons[idx] %> fs-5"></i>
                  </div>

                  <div>
                    <div class="h4 fw-semibold mb-1"><%= item[:title] %></div>
                    <div class="text-secondary"><%= item[:tagline] %></div>
                  </div>
                </div>

                <ul class="mb-0 ps-3 services-bullets">
                  <% item[:bullets].each do |b| %>
                    <li class="mb-2"><%= b.html_safe %></li>
                  <% end %>
                </ul>
              </div>
            </div>

            <!-- Rechts: Preismodell -->
            <div class="col-12 col-lg-5">
              <div class="p-4 p-lg-5 services-pricing">
                <div class="text-uppercase small fw-semibold text-secondary mb-2">
                  <%= item[:pricing_title] %>
                </div>

                <ul class="mb-0 ps-3">
                  <% item[:pricing].each do |p| %>
                    <li class="mb-2"><%= p.html_safe %></li>
                  <% end %>
                </ul>
                <% if idx == t("services.items").length - 1 %>
                  <div class="mt-3 ps-4">
                    <%= link_to t("services.cta.button"), contact_path, class: "btn btn-outline-dark" %>
                  </div>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>